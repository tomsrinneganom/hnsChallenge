<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#757373</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/backgroundColor</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Widget.App.FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="fabSize">mini</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/backgroundColor</item>
        <item name="colorOnSecondary">@color/iconColor</item>
        <item name="colorOnSurface">@color/iconColor</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="Widget.App.CardView.ListItem" parent="Widget.App.CardView">
        <item name="cardBackgroundColor">@color/backgroundColorCard</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/backgroundColorCard</item>
        <item name="colorSurface">@color/backgroundColorCard</item>
        <item name="colorOnSurface">@color/backgroundColorCard</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.TextView.TitleText" parent="Widget.App.TextView">
        <item name="android:textAppearance">@style/TextAppearance.App.TextView.TitleText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.TextView.TitleText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_black</item>
        <item name="android:fontFamily">@font/rubik_black</item>
    </style>

    <style name="Widget.App.TextView.MediumText" parent="Widget.App.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.TextView.SecondaryText</item>
    </style>

    <style name="Widget.App.TextView.SmallText" parent="Widget.App.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.TextView.SecondaryText</item>
    </style>

    <style name="TextAppearance.App.TextView.SecondaryText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/iconColor</item>
    </style>
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

</resources>