<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#757373</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#000000</item>
    </style>
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorLight</item>
        <item name="android:tint">@color/colorDark</item>
    </style>
</resources>