<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:rotation="23"
        android:rotationY="50"
        app:cardCornerRadius="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewProfileUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="tomsrinneganom"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorDark"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_stars_24"
        android:tint="@color/colorDark"
        app:layout_constraintStart_toStartOf="@+id/textViewProfileUserName"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileUserName" />

    <TextView
        android:id="@+id/textViewProfileScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/roboto_medium"
        android:text="2000"
        android:textColor="@color/colorDark"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textViewProfileSubscribersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Подписчики"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textViewProfileSubscriptionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Подписки"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewProfileSubscribersTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewProfileSubscribersTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewProfileSubscribersTitle" />

    <TextView
        android:id="@+id/textViewProfileSubscriptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="1200"
        android:textColor="@color/colorDark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewProfileSubscriptionsTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewProfileSubscriptionsTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileSubscriptionsTitle" />

    <TextView
        android:id="@+id/textViewProfileSubscribers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="1200"
        android:textColor="@color/colorDark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewProfileSubscribersTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewProfileSubscribersTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileSubscribersTitle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSubscribe"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        app:cardBackgroundColor="#FFB323FF"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewProfileSubscriptionsTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewProfileSubscribersTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileSubscribers">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="Подписаться"
            android:textAlignment="center"
            android:textColor="@color/colorLight"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSubscribe">

        <fragment
            android:id="@+id/fragment2"
            android:name="com.dedstudio.hnschallenge.ProfileMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>